<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Update Report Card</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for(@evaluation, :url => {:action => "update_report_card"}, :html => {:class => "form-horizontal"}) do |f| %>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<%= f.label :date, "Date", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :date, :value => @evaluation.try(:date).try(:strftime, "%m/%d/%Y"), class: "form-control", "data-provide" => 'datepicker' %>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<% @domains.each do |domain| %>
						<%= f.fields_for domain do |d| %>
							<div class="col-sm-6">
								<div class="well">
									<p class="text-center"><strong><%= domain.name %></strong></p>
									<% skills = [] %>
									<% i = 0 %>
									<% domain.skills.each do |skill| %>
										<% if domain.name == "Gross Motor" %>
											<% File.readlines("public/skills/gmd.txt").map do |line| skills << line end %>
											<%= d.fields_for :skill do |s| %>
												<div class="form-group">
													<%= s.label :presence, skills[i], class: "col-sm-7 col-sm-offset-1 control-label" %>
													<div class="col-sm-4">
														<label class="radio-inline">
															<%= s.radio_button :presence, true %> P
														</label>
														<label class="radio-inline">
															<%= s.radio_button :presence, false %> NP
														</label>
													</div>
												</div>
											<% end %>
											<% i += 1 %>
										<% end %>
									<% end %>
								</div>
							</div>
						<% end %>
					<% end %>
				</div>
				<div class="row">
					<div class="col-sm-4 col-sm-offset-2">
						<%= f.submit "Update", class: "btn btn-default btn-primary btn-block" %>
					</div>
			<% end %>
				<div class="col-sm-4">
					<%= button_to('Back', "/teachers/class", {method: 'get', :class => 'btn btn-large btn-primary btn-block'}) %>
				</div>
			</div>
		</div>
	</div>
</div>