<div class="col-md-10 col-md-offset-2 main">
	<h3 class="page-header">Class</h3>
	<div class="row">
		<div class="well">
			<form class="form-horizontal">
				<div class="form-group">
					<label class="col-md-2 control-label">Name</label>
					<div class="col-md-10">
						<input class="form-control" id="name" type="text" value="<%= current_user.section.name %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Level</label>
					<div class="col-md-10">
						<input class="form-control" id="level" type="text" value="<%= current_user.section.level %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Room Number</label>
					<div class="col-md-10">
						<input class="form-control" id="room_no" type="text" value="<%= current_user.section.room_number %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Adviser</label>
					<div class="col-md-10">
						<input class="form-control" id="room_no" type="text" value="<%= current_user.fname %> <%= current_user.lname %>"readonly="readonly">
					</div>
				</div>
			</form>
			<br><br>
			<p class="text-center"><strong>Students Enrolled</strong></p>
			<div class="row">
				<div class="col-md-3">
					<%= form_tag "/teachers/class/find" do %>
					  	<div class="input-group">
						    <%= text_field_tag :search_string, params[:search], class: "form-control" %>
						    <span class="input-group-btn">
						    	<%= button_tag(type: "submit", class: "btn btn-default") do %>
						    		<span class="glyphicon glyphicon-search"></span>
						    	<% end %>
						    </span>
					    </div>
					<% end %>
				</div>
			</div>
			<br>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-md-1">ID</th>
						<th class="col-md-3" colspan="3">Name</th>
						<th class="col-md-1">Sex</th>
						<th class="col-md-3">Address</th>
						<th class="col-md-2">Birthdate</th>
						<th class="col-md-1">Age</th>
						<th class="col-md-1" colspan="3">Options</th>
					<tbody>
						<% @students.each do |student| %>
							<tr>
								<td style="text-align: center"><%= student.student_id %></td>
								<td><%= student.fname %></td>
								<td><%= student.mname %></td>
								<td><%= student.lname %></td>
								<td style="text-align: center"><%= student.sex %></td>
								<td><%= student.address %></td>
								<td style="text-align: center"><%= student.birthdate %></td>
								<td style="text-align: center"><%= student.age %></td>
								<td style="text-align: center">
									<a href="/teachers/class/student/<%= student.id %>">
										<span class="glyphicon glyphicon-eye-open"></span>
									</a>
								</td>
								<td style="text-align: center">
									<a href="#">
										<span class="glyphicon glyphicon-list-alt"></span>
									</a>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div>
			<% if controller.action_name == "find" %>
				<br><br>
				<div class="row">
					<div class="col-md-4 col-md-offset-4">
						<button type="button" class="btn btn-default btn-block"><%= link_to 'Back', "/teachers/class" %></button>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>