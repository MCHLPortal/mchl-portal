<div class="col-md-10 col-md-offset-2 main">
	<h3 class="page-header">Add Teacher</h3>
	<div class="well">
		<%= form_for @teacher, url: "/teachers", :html => {:class => "form-horizontal"} do |f| %>
			<div class="form-group">
				<%= f.label :employee_id, "Employee ID", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<%= f.text_field :employee_id, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :username, "Username", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<%= f.text_field :username, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :password, "Password", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<%= f.text_field :password, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :name, "Name", class: "col-md-2 control-label" %>
				<div class="col-md-3">
					<%= f.text_field :fname, class: "form-control", placeholder: 'First Name' %>
				</div>
				<div class="col-md-3">
					<%= f.text_field :mname, class: "form-control", placeholder: 'Middle Name' %>
				</div>
				<div class="col-md-3">
					<%= f.text_field :lname, class: "form-control", placeholder: 'Last Name' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :sections_id, "Section Handled", class: "col-md-2 control-label" %>
				<div class="col-md-9">
					<%= f.select(:sections_id, @sections, {}, {class: "form-control"}) %>
				</div>
			</div>
			<br><br>
			<div class="row">
				<div class="col-md-4 col-md-offset-2">
					<button type="button" class="btn btn-default btn-block"><%= link_to 'Back', "/admin/teachers" %></button>
				</div>
				<div class="col-md-4">
					<%= f.submit "Create", class: "btn btn-default btn-default btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>