<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Assessments List</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="row">
				<div class="col-sm-3">
					<%= form_tag "/admin/assessments/find" do %>
					  	<div class="input-group">
						    <%= text_field_tag :search_string, params[:search], class: "form-control" %>
						    <span class="input-group-btn">
						    	<%= button_tag(type: "submit", class: "btn btn-default") do %>
						    		<span class="glyphicon glyphicon-search"></span>
						    	<% end %>
						    </span>
					    </div>
					<% end %>
				</div>
			</div>
			<br>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-sm-3">Level</th>
						<th class="col-sm-2">Tuition</th>
						<th class="col-sm-2">Other Fees</th>
						<th class="col-sm-2">Other Assessment</th>
						<th class="col-sm-2">Total Assessment</th>
						<th class="col-sm-1" colspan="1">Options</th>
					</thead>
					<tbody>
						<% @assessments.each do |assessment| %>
							<tr>
								<td style="text-align: center"><%= assessment.level %></td>
								<td style="text-align: center"><%= assessment.tuition %></td>
								<td style="text-align: center"><%= assessment.other_fees %></td>
								<td style="text-align: center"><%= assessment.other_assessment %></td>
								<td style="text-align: center"><%= assessment.total_assessment %></td>
								<td style="text-align: center">
									<a href="/admin/assessments/<%= assessment.id %>/update">
										<span class="glyphicon glyphicon-pencil"></span>
									</a>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div>
		</div>
	</div>
</div>