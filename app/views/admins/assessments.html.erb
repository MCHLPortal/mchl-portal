<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Assessments List</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<br>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-sm-3">Level</th>
						<th class="col-sm-2">Tuition</th>
						<th class="col-sm-2">Other Fees</th>
						<th class="col-sm-2">Other Assessment</th>
						<th class="col-sm-2">Total Assessment</th>
						<th class="col-sm-1" colspan="1">Options</th>
					</thead>
					<tbody>
						<% @assessments.each do |assessment| %>
							<tr>
								<td style="text-align: center"><%= assessment.level %></td>
								<td style="text-align: center">P <%= assessment.tuition %></td>
								<td style="text-align: center">P <%= assessment.other_fees %></td>
								<td style="text-align: center">P <%= assessment.other_assessment %></td>
								<td style="text-align: center">P <%= assessment.total_assessment %></td>
								<td style="text-align: center">
									<%= link_to edit_assessment_path(:id => assessment.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#edit_assessment'} do %>
										<span class="glyphicon glyphicon-pencil"></span>
									<% end %>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="edit_assessment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>