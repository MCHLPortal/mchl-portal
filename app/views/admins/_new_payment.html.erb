<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3 id="myModalLabel">Add Payment</h3>
		</div>
		<%= form_for @payment, :html => {:class => "form-horizontal"} do |f| %>
			<div class="modal-body">
				<div class="form-group">
					<%= f.label :date, "Date", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.text_field :date, class: "form-control", "data-provide" => 'datepicker', :value => Time.now.utc.to_date.strftime("%m/%d/%Y") %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :method, "Method", class: "col-sm-2 control-label" %>
					<div class="col-sm-9">
						<label class="radio-inline">
							<%= f.radio_button :method, 'Bank' %> Bank
						</label>
						<label class="radio-inline">
							<%= f.radio_button :method, 'Cash' %> Cash
						</label>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :amount, "Amount", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.text_field :amount, class: "form-control" %>
					</div>
				</div>
				<%= hidden_field_tag(:id, params[:id]) %>
			</div>
			<div class="modal-footer">
				<div class="col-sm-6 col-sm-offset-3">
					<%= f.submit "Create", class: "btn btn-default btn-primary btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>