<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Payments List</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="row">
				<div class="col-sm-3">
					<%= form_tag "/admin/payments/find" do %>
					  	<div class="input-group">
						    <%= text_field_tag :search_string, params[:search], class: "form-control" %>
						    <span class="input-group-btn">
						    	<%= button_tag(type: "submit", class: "btn btn-default") do %>
						    		<span class="glyphicon glyphicon-search"></span>
						    	<% end %>
						    </span>
					    </div>
					<% end %>
				</div>
			</div>
			<br>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-sm-1">Date</th>
						<th class="col-sm-1">Amount</th>
						<th class="col-sm-1">Balance</th>
						<th class="col-sm-1" colspan="1">Options</th>
					</thead>
					<tbody>
						<% @payments.each do |payment| %>
							<tr>
								<td style="text-align: center"><%= payment.date.strftime("%m/%d/%Y") %></td>
								<td style="text-align: center"><%= payment.amount %></td>
								<td style="text-align: center"><%= payment.balance %></td>
								<td style="text-align: center">
									<a href="/admin/students/<%= params[:id] %>/payments/<%= payment.id %>/delete">
										<span class="glyphicon glyphicon-remove"></span>
									</a>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div><br>
			<div class="row">
				<div class="col-sm-4 col-sm-offset-4">
					<% if controller.action_name == "payments" %>
						<%= button_to('Add Payment', "/admin/students/#{params[:id]}/payments/new", {method: 'get', :class => 'btn btn-large btn-primary btn-block'})  %>
					<% elsif controller.action_name == "find_student" %>
						<%= button_to('Back', "/admin/students/#{params[:id]}/payments", {method: 'get', :class => 'btn btn-large btn-primary btn-block'})  %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>