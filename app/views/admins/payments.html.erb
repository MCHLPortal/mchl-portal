<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Payments List</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="form-horizontal">
				<div class="well">
					<div class="row">
						<div class="form-group">
							<label class="col-sm-2 control-label">Tuition</label>
							<div class="col-sm-9">
								<div class="input-group">
									<span class="input-group-addon">P</span>
									<input class="form-control" id="tuition" type="text" value="<%= @assessment.tuition %>" readonly="readonly">
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Other Fees</label>
							<div class="col-sm-9">
								<div class="input-group">
									<span class="input-group-addon">P</span>
									<input class="form-control" id="other_fees" type="text" value="<%= @assessment.other_fees %>" readonly="readonly">
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Other Assessment</label>
							<div class="col-sm-9">
								<div class="input-group">
									<span class="input-group-addon">P</span>
									<input class="form-control" id="other_assessment" type="text" value="<%= @assessment.other_assessment %>" readonly="readonly">
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Total Assessment</label>
							<div class="col-sm-9">
								<div class="input-group">
									<span class="input-group-addon">P</span>
									<input class="form-control" id="total_assessment" type="text" value="<%= @assessment.total_assessment %>" readonly="readonly">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-sm-2">Date</th>
						<th class="col-sm-2">Method</th>
						<th class="col-sm-3">Amount</th>
						<th class="col-sm-3">Balance</th>
						<th class="col-sm-2">Options</th>
					</thead>
					<tbody>
						<% @payments.each do |payment| %>
							<tr>
								<td style="text-align: center"><%= payment.date.strftime("%m/%d/%Y") %></td>
								<td style="text-align: center"><%= payment.method %></td>
								<td style="text-align: center">P<%= payment.amount %></td>
								<td style="text-align: center">P<%= payment.balance %></td>
								<td style="text-align: center">
									<a href="/admin/students/<%= params[:id] %>/payments/<%= payment.id %>/delete">
										<span class="glyphicon glyphicon-remove"></span>
									</a>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div><br>
			<div class="row">
				<div class="col-sm-4 col-sm-offset-2">
					<%= button_to('Back', "/admin/students", {method: 'get', :class => 'btn btn-large btn-primary btn-block'})  %>
				</div>
				<div class="col-sm-4">
					<%= button_to('Add Payment', new_payment_path(:id => params[:id]), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#new_payment', method: 'get', :class => 'btn btn-large btn-primary btn-block'}) %>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="new_payment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>