<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Update Assessment</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for(@assessment, :url => {:action => "update_assessment"}, :html => {:class => "form-horizontal"}) do |f| %>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<%= f.label :tuition, "Tuition", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :tuition, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :other_fees, "Other Fees", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :other_fees, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :other_assessment, "Other Assessment", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :other_assessment, class: "form-control" %>
							</div>
						</div>
					</div>
				</div><br>
				<div class="row">
					<div class="col-sm-4 col-sm-offset-2">
						<%= f.submit "Update", class: "btn btn-default btn-primary btn-block" %>
					</div>
				<% end %>
				<div class="col-sm-4">
					<%= button_to('Back', "/admin/assessments", {method: 'get', :class => 'btn btn-large btn-primary btn-block'}) %>
				</div>
			</div>
		</div>
	</div>
</div>