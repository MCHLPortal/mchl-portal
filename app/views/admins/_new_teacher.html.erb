<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h2 id="myModalLabel">New Teacher</h2>
		</div>
		<%= form_for @teacher, url: "/teachers", :html => {:class => "form-horizontal"} do |f| %>
			<div class="modal-body">
				<div class="form-group">
					<%= f.label :employee_id, "ID", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.text_field :employee_id, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :name, "Name", class: "col-sm-2 control-label" %>
					<div class="col-sm-4">
						<%= f.text_field :fname, class: "form-control", placeholder: 'First Name' %>
					</div>
					<div class="col-sm-3">
						<%= f.text_field :mname, class: "form-control", placeholder: 'Middle Name' %>
					</div>
					<div class="col-sm-3">
						<%= f.text_field :lname, class: "form-control", placeholder: 'Last Name' %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :section_id, "Section Handled", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.select(:section_id, @sections, {}, {class: "form-control"}) %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<div class="col-sm-6 col-sm-offset-3">
					<%= f.submit "Create", class: "btn btn-default btn-primary btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>