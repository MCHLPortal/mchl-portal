<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3 id="myModalLabel">Update Assessment</h3>
		</div>
		<%= form_for(@assessment, :url => update_assessment_path(:id => params[:id]), :html => {:class => "form-horizontal"}) do |f| %>
			<div class="modal-body">
				<div class="form-group">
					<%= f.label :tuition, "Tuition", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<div class="input-group">
							<span class="input-group-addon">P</span>
							<%= f.text_field :tuition, class: "form-control" %>
						</div>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :other_fees, "Other Fees", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<div class="input-group">
							<span class="input-group-addon">P</span>
							<%= f.text_field :other_fees, class: "form-control" %>
						</div>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :other_assessment, "Other Assessment", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<div class="input-group">
							<span class="input-group-addon">P</span>
							<%= f.text_field :other_assessment, class: "form-control" %>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<div class="col-sm-6 col-sm-offset-3">
					<%= f.submit "Update", class: "btn btn-default btn-primary btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>