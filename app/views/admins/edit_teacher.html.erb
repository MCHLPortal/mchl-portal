<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Update Teacher</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for(@teacher, :url => {:action => "update_teacher"}, :html => {:class => "form-horizontal"}) do |f| %>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<%= f.label :employee_id, "Employee ID", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :employee_id, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :name, "Name", class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.text_field :fname, class: "form-control", placeholder: 'First Name' %>
							</div>
							<div class="col-sm-3">
								<%= f.text_field :mname, class: "form-control", placeholder: 'Middle Name' %>
							</div>
							<div class="col-sm-3">
								<%= f.text_field :lname, class: "form-control", placeholder: 'Last Name' %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :section_id, "Section Handled", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.select(:section_id, @sections, {}, {class: "form-control"}) %>
							</div>
						</div>
					</div>
				</div><br>
				<div class="row">
					<div class="col-sm-4 col-sm-offset-2">
						<%= f.submit "Update", class: "btn btn-default btn-primary btn-block" %>
					</div>
			<% end %>
				<div class="col-sm-4">
					<%= button_to('Back', "/admin/teachers", {method: 'get', :class => 'btn btn-large btn-primary btn-block'}) %>
				</div>
			</div>
		</div>
	</div>
</div>