<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3 id="myModalLabel">Teacher</h2>
		</div>
		<div class="modal-body">
			<form class="form-horizontal">
				<div class="form-group">
					<label class="col-sm-2 control-label">ID</label>
					<div class="col-sm-10">
						<input class="form-control" id="employee_id" type="text" value="<%= @teacher.employee_id %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Username</label>
					<div class="col-sm-10">
						<input class="form-control" id="username" type="text" value="<%= @teacher.username %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Name</label>
					<div class="col-sm-10">
						<input class="form-control" id="name" type="text" value="<%= @teacher.fname + " " + @teacher.mname + " " + @teacher.lname %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Section Handled</label>
					<div class="col-sm-10">
						<input class="form-control" id="sex" type="text" value="<%= @teacher.try(:section).try(:name) %>" readonly="readonly">
					</div>
				</div>
				<br>
				<p class="text-center"><strong>Students Handled</strong></p>
				<div class="table-responsive">
					<table class="table table-default table-hover">
						<thead>
							<th class="col-sm-3">ID</th>
							<th class="col-sm-5" colspan="3">Name</th>
							<th class="col-sm-2">Sex</th>
							<th class="col-sm-2">Age</th>
						</thead>
						<tbody>
							<% @students.each do |student| %>
								<tr>
									<td style="text-align: center"><%= student.student_id %></td>
									<td><%= student.fname %></td>
									<td><%= student.mname %></td>
									<td><%= student.lname %></td>
									<td style="text-align: center"><%= student.sex %></td>
									<td style="text-align: center"><%= student.age %></td>
								</tr>
							<% end %>
					  	</tbody>
					</table>
				</div>
			</form>
		</div>
	</div>
</div>