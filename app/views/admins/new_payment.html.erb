<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Add Payment</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for @payment, :html => {:class => "form-horizontal"} do |f| %>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<%= f.label :date, "Date", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :date, class: "form-control", "data-provide" => 'datepicker', :value => Time.now.utc.to_date.strftime("%m/%d/%Y") %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :amount, "Amount", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :amount, class: "form-control" %>
							</div>
						</div>
						<%= hidden_field_tag(:id, params[:id]) %>
					</div>
				</div><br>
				<div class="row">
					<div class="col-sm-4 col-sm-offset-2">
						<%= f.submit "Create", class: "btn btn-default btn-primary btn-block" %>
					</div>
			<% end %>
				<div class="col-sm-4">
					<%= button_to('Back', "/admin/students/#{params[:id]}/payments", {method: 'get', :class => 'btn btn-large btn-primary btn-block'})  %>
				</div>
			</div>
		</div>
	</div>
</div>