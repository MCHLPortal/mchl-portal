<div class="col-md-10 col-md-offset-2 main">
	<h3 class="page-header">Add Section</h3>
	<div class="well">
		<%= form_for @section, url: "/sections", :html => {:class => "form-horizontal"} do |f| %>
			<div class="form-group">
				<%= f.label :name, "Name", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<%= f.text_field :name, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :level, "Level", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<label class="radio-inline">
						<%= f.radio_button :level, 'Nursery' %> Nursery
					</label>
					<label class="radio-inline">
						<%= f.radio_button :level, 'Kindergarten' %> Kindergarten
					</label>
					<label class="radio-inline">
						<%= f.radio_button :level, 'Preparatory' %> Preparatory
					</label>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :room_number, "Room Number", class: "col-md-2 control-label" %>
				<div class="col-md-10">
					<%= f.text_field :room_number, class: "form-control" %>
				</div>
			</div>
			<br><br>
			<div class="row">
				<div class="col-md-4 col-md-offset-2">
					<button type="button" class="btn btn-default btn-block"><%= link_to 'Back', "/admin/sections" %></button>
				</div>
				<div class="col-md-4">
					<%= f.submit "Create", class: "btn btn-default btn-default btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>