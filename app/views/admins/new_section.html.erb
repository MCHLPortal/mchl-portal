<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Add Section</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for @section, url: "/sections", :html => {:class => "form-horizontal"} do |f| %>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<%= f.label :name, "Name", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :name, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :level, "Level", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<label class="radio-inline">
									<%= f.radio_button :level, 'Nursery' %> Nursery
								</label>
								<label class="radio-inline">
									<%= f.radio_button :level, 'Kindergarten' %> Kindergarten
								</label>
								<label class="radio-inline">
									<%= f.radio_button :level, 'Preparatory' %> Preparatory
								</label>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :room_number, "Room Number", class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_field :room_number, class: "form-control" %>
							</div>
						</div>
					</div>
				</div><br>
				<div class="row">
					<div class="col-sm-4 col-sm-offset-2">
						<%= f.submit "Create", class: "btn btn-default btn-primary btn-block" %>
					</div>
			<% end %>
				<div class="col-sm-4">
					<%= button_to('Back', "/admin/sections", {method: 'get', :class => 'btn btn-large btn-primary btn-block'}) %>
				</div>
			</div>
		</div>
	</div>
</div>