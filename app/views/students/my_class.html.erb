<div class="col-md-10 col-md-offset-2 main">
	<h3 class="page-header">Section</h3>
	<div class="row">
		<div class="well">
			<form class="form-horizontal">
				<div class="form-group">
					<label class="col-md-2 control-label">Name</label>
					<div class="col-md-10">
						<input class="form-control" id="name" type="text" value="<%= current_user.section.name %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Level</label>
					<div class="col-md-10">
						<input class="form-control" id="level" type="text" value="<%= current_user.section.level %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Room Number</label>
					<div class="col-md-10">
						<input class="form-control" id="room_no" type="text" value="<%= current_user.section.room_number %>" readonly="readonly">
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label">Adviser</label>
					<div class="col-md-10">
						<input class="form-control" id="room_no" type="text" value="<%= current_user.employee.fname %> <%= current_user.employee.lname %>"readonly="readonly">
					</div>
				</div>
			</form>
			<br>
			<p class="text-center"><strong>Classmates</strong></p>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-md-3">ID</th>
						<th class="col-md-3">First Name</th>
						<th class="col-md-3">Middle Name</th>
						<th class="col-md-3">Last Name</th>
					</thead>
					<tbody>
						<% Student.where(:sections_id => current_user.sections_id).each do |student| %>
							<% if student.id != current_user.id %>
								<tr>
									<td style="text-align: center"><%= student.student_id %></td>
									<td><%= student.fname %></td>
									<td><%= student.mname %></td>
									<td><%= student.lname %></td>
								</tr>
							<% end %>
						<% end %>
				  	</tbody>
				</table>
			</div>
		</div>
	</div>
</div>