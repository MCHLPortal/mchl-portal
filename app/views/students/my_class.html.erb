<div class="col-sm-10 col-sm-offset-2 main">
	<h3>Class</h3>
	<div class="panel panel-default">
		<div class="panel-body">
			<form class="form-horizontal">
				<div class="well">
					<div class="row">
						<div class="form-group">
							<label class="col-sm-2 control-label">Name</label>
							<div class="col-sm-9">
								<input class="form-control" id="name" type="text" value="<%= current_user.try(:section).try(:name) %>" readonly="readonly">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Level</label>
							<div class="col-sm-9">
								<input class="form-control" id="level" type="text" value="<%= current_user.try(:section).try(:level) %>" readonly="readonly">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Room Number</label>
							<div class="col-sm-9">
								<input class="form-control" id="room_no" type="text" value="<%= current_user.try(:section).try(:room_number) %>" readonly="readonly">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Adviser</label>
							<div class="col-sm-9">
								<input class="form-control" id="room_no" type="text" value="<%= current_user.try(:employee).try(:fname) %> <%= current_user.employee.lname %>"readonly="readonly">
							</div>
						</div>
					</form>
				</div>
			</div>
			<p class="text-center"><strong>Classmates</strong></p>
			<div class="table-responsive">
				<table class="table table-default table-hover">
					<thead>
						<th class="col-sm-2">ID</th>
						<th class="col-sm-3">First Name</th>
						<th class="col-sm-3">Middle Name</th>
						<th class="col-sm-3">Last Name</th>
						<th class="col-sm-2">Sex</th>
					</thead>
					<tbody>
						<% @classmates.each do |classmate| %>
							<tr>
								<td style="text-align: center"><%= classmate.student_id %></td>
								<td style="text-align: center"><%= classmate.fname %></td>
								<td style="text-align: center"><%= classmate.mname %></td>
								<td style="text-align: center"><%= classmate.lname %></td>
								<td style="text-align: center"><%= classmate.sex %></td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div>
		</div>
	</div>
</div>